<!-- #container-header -->
<div id="container-header">
  <header>

    <div class="navbar navbar-fixed-top">
      <nav>
        <!-- .navbar-inner -->
        <div class="navbar-inner">

          <!-- .container -->
          <div class="container">
            <a  class="brand" href="/">TwitJump</a>
            <% if user_signed_in? %>
              <% if current_user.finished_initial_import? %>

                <!-- .nav .pull-left -->
                <ul id="link-timeline" class="nav page-nav pull-left" data-current-action-name="<%= controller.action_name %>">
                  <li class="public_timeline"><a href="/public_timeline"><i class="icon-globe margin"></i>みんな</a></li>
                  <li class="home_timeline"><a href="/home_timeline"><i class="icon-group margin"></i>友達</a></li>
                  <li class="user_timeline"><a href="/user_timeline"><i class="icon-user margin"></i>あなた</a></li>
                </ul>
                <!-- /.nav .pull-left -->
              <% end %>

              <!-- .nav .pull-right -->
              <ul id="link-twitter-profile" class="nav pull-right">

                <li class="twitter-profile">
                  <a href="https://twitter.com/<%= current_user.screen_name %>" target="_blank">
                    <%= image_tag(current_user.profile_image_url_https, width:20) %>
                  </a>
                  <a href="https://twitter.com/<%= current_user.screen_name %>" target="_blank">
                    @<%= current_user.screen_name %>
                  </a>
                </li>

                <li class="dropbown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-caret-down"></i></a>

                  <!-- .dropdown-menu -->
                  <ul class="dropdown-menu">
                    <% if current_user.finished_initial_import? %>
                      <li>
                        <%= link_to users_setting_path, class: "link-config" do %>
                          <i class="icon-hdd"></i>データ管理
                        <% end %>
                      </li>
                      <li class="divider"></li>
                    <% end %>
                    <li>
                      <%= link_to destroy_user_session_path, class: 'link-sign-out' do %>
                        <i class="icon-signout"></i>ログアウト
                      <% end %>
                    </li>
                  </ul>
                  <!-- /.dropdown-menu -->

                </li>

              </ul>
              <!-- /.nav .pull-right -->

            <% else %>
              <!-- .nav .pull-left -->
              <ul id="link-timeline" class="nav page-nav pull-left" data-current-action-name="<%= controller.action_name %>">
                <li class="public_timeline"><a href="/public_timeline"><i class="icon-globe margin"></i>みんな</a></li>
                <li class="home_timeline disabled"><a href="#"><i class="icon-group margin"></i>友達</a></li>
                <li class="user_timeline disabled"><a href="#"><i class="icon-user margin"></i>あなた</a></li>
              </ul>
              <!-- /.nav .pull-left -->
              <!-- .nav .pull-right -->
              <ul id="link-auth" class="nav pull-right">
                <li><%= link_to 'Sign in with Twiter', user_twitter_omniauth_authorize_path, class: 'btn-auth' %></li>
              </ul>
              <!-- /.nav .pull-right -->
            <% end %>
          </div>
          <!-- /.container -->

        </div>
        <!-- /.navbar-inner -->
      </nav>

    </div>
    <!-- /.navbar -->
  </header>

</div>
<!-- /#global-header -->
