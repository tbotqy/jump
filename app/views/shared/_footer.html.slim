#container-footer
  .inner
    .area-upper
      .area-left
        .adsense.footer
          = render "shared/adsense/pc/common/footer"
      .area-right
        .wrap-catch
          p.brand
            | TwitJump
          p.description
            | click and jump 
            br
            | to your passed days
    footer
      .container
        span.copyright
          |  <a href="http://
          = request.host
          | ">TwitJump
          |  © 
          = Time.now.year
        .wrap-social-plugins
          .wrap-twitter-follow
            a.twitter-follow-button[href="https://twitter.com/twit_jump" data-show-count="false" data-lang="ja"]
              | @twit_jumpさんをフォロー
          .wrap-fb
            |  <div class="fb-like" data-href="http://
            = request.host
            | " data-send="false" data-show-faces="false" data-layout="button_count">
        .wrap-hatena
          a.hatena-bookmark-button[href="http://b.hatena.ne.jp/entry/" data-hatena-bookmark-layout="simple-balloon" title="このエントリーをはてなブックマークに追加"]
            = image_tag("http://b.st-hatena.com/images/entry-button/button-only.gif", alt: "このエントリーをはてなブックマークに追加", width: 20, height: 20, style: "border: none;")
          script[type="text/javascript" src="http://b.st-hatena.com/js/bookmark_button.js" charset="utf-8" async="async"]
        .wrap-gplus
          .g-plusone[data-size="medium"]
          script[type="text/javascript"]
            |  window.___gcfg = {lang: 'ja'}; (function() { var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true; po.src = 'https://apis.google.com/js/plusone.js'; var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s); })(); 
        .wrap-twitter-tweet
