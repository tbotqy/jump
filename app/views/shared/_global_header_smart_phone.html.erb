<!-- #container-header -->
<header id="container-header">
  <h1><a class="brand pull-left" href="/">TwitJump</a></h1>
  <% if logged_in? %>
    <a href="#" class="btn btn-xs drop-down pull-right">
      <%= image_tag(current_user.profile_image_url_https, class: "profile-img", width:30) %>
      <i class="icon-caret-down"></i>
    </a>
    <nav class="drop-down-nav">
      <% if current_user.finished_initial_import? %>
        <% if controller.action_name == "setting" %>
          <a class="btn btn-default btn-sm" href="/user_timeline"><i class="icon-comment"></i>タイムライン</a>
        <% else %>
          <%= link_to users_setting_path, class: "btn btn-default btn-sm link-config" do %>
            <i class="icon-hdd"></i>データ管理
          <% end %>
        <% end %>
      <% end %>
      <a class="btn btn-default btn-sm link-logout" href="/logout"><i class="icon-signout"></i>ログアウト</a>
    </nav>
  <% else %>
    <a class="btn-auth btn btn-info pull-right btn-sm" href="/auth/twitter">登録</a>
  <% end %>
</header>
<!-- /#container-header -->
