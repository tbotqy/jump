- if request.smart_phone?
  = javascript_include_tag("smart_phone/dashbord.js")
- else
  = javascript_include_tag("dashbord.js")
.inner
  .space
  #wrap-term-selectors
    #wrap-list-years
      ul.list-years.my-btn-group
        - max = @date_list.size
        - @date_list.each.with_index(1) do |(year,val), index|
          li data-date="date-#{year}"
            a class="btn btn-link #{dashbord_class_name(index, max)}" data-date-type="year" href="#{@base_url}/#{year}" data-date=year data-complete-text=year 
              = year
    #wrap-list-months
      - @date_list.each do |year,months|
        ul class="list-months my-btn-group date-#{year}"
          - max = months.size
          - months.each.with_index(1) do |(month,val),index|
            li data-date="date-#{year}-#{month}"
              a class="btn btn-link #{dashbord_class_name(index, max)}" data-date-type="month" href="#{@base_url}/#{year}-#{month}" data-date="#{year}-#{month}" data-complete-text=month
                = month
    #wrap-list-days
      - @date_list.each do |year,months|
        - months.each do |month,days|
          ul class="list-days my-btn-group date-#{year}-#{month}" 
            - max = days.size
            - days.each.with_index(1) do |(day,full_date),index|
              li data-date="date-#{year}-#{month}-#{day}"
                a class="btn btn-link #{dashbord_class_name(index, max)}" data-date-type="day" href="#{@base_url}/#{year}-#{month}-#{day}" data-date="#{year}-#{month}-#{day}" data-complete-text=day
                  = day
